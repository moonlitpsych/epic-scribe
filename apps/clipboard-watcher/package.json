{
  "name": "@epic-scribe/clipboard-watcher",
  "version": "0.1.0",
  "private": true,
  "description": "Menu bar clipboard watcher for Epic Scribe - imports prior notes from Epic",
  "author": "Dr. Rufus Sweeney",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@epic-scribe/epic-note-parser": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "appId": "com.epicscribe.clipboard-watcher",
    "productName": "Epic Scribe Clipboard",
    "mac": {
      "category": "public.app-category.medical",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
